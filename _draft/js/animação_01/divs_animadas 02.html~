<script type="text/javascript">

var anima = {
	i: 1,
	dispara: function(){
			console.log(anima.i, anima.timer);

			if(anima.i == 11){
				clearTimeout(anima.timer)
			}else{
				obj = document.getElementById("_"+anima.i);
				obj.style.backgroundColor = "rgb("+anima.i*9+", "+anima.i*20+", 255)";
				anima.timer = setTimeout(anima.dispara, 175);
				anima.i++;
			}

	}
}
anima.dispara();

</script>
